<!DOCTYPE html>
<html lang="en" dir="rtl">


<head>
   
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - HospitalSystem</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <meta content="" name="description" />
    <meta content="Abdelfattah Arafa" name="author" />
    <!-- BEGIN GLOBAL MANDATORY STYLES -->
    <link href="~/HospitalWebsite/assets/global/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="~/HospitalWebsite/assets/global/plugins/simple-line-icons/simple-line-icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/HospitalWebsite/assets/global/plugins/bootstrap/css/bootstrap-rtl.min.css" rel="stylesheet" type="text/css" />
    <link href="~/HospitalWebsite/assets/global/plugins/bootstrap-switch/css/bootstrap-switch-rtl.min.css" rel="stylesheet" type="text/css" />
    <!-- END GLOBAL MANDATORY STYLES -->
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <link href="~/HospitalWebsite/assets/global/plugins/bootstrap-datepicker/css/bootstrap-datepicker3.min.css" rel="stylesheet" type="text/css" />
    <link href="~/HospitalWebsite/assets/global/plugins/bootstrap-timepicker/css/bootstrap-timepicker.min.css" rel="stylesheet" type="text/css" />
    <link href="~/HospitalWebsite/assets/global/plugins/bootstrap-datetimepicker/css/bootstrap-datetimepicker.min.css" rel="stylesheet" type="text/css" />
    <!-- END PAGE LEVEL PLUGINS -->
    <!-- BEGIN THEME GLOBAL STYLES -->
    <link href="~/HospitalWebsite/assets/global/css/components-rtl.min.css" rel="stylesheet" id="style_components" type="text/css" />
    <link href="~/HospitalWebsite/assets/global/css/plugins-rtl.min.css" rel="stylesheet" type="text/css" />
    <!-- END THEME GLOBAL STYLES -->
    <!-- BEGIN THEME LAYOUT STYLES -->
    <link href="~/HospitalWebsite/assets/layouts/layout3/css/layout-rtl.min.css" rel="stylesheet" type="text/css" />
    <link href="~/HospitalWebsite/assets/layouts/layout3/css/themes/default-rtl.min.css" rel="stylesheet" type="text/css" id="style_color" />
    <link href="~/HospitalWebsite/assets/layouts/layout3/css/custom-rtl.min.css" rel="stylesheet" type="text/css" />
    <!-- END THEME LAYOUT STYLES -->

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Almarai:wght@300;400;700;800&display=swap" rel="stylesheet">

    <link rel="shortcut icon" href="~/HospitalWebsite/assets/layouts/layout3/img/favicon.png" />
</head>
<!-- END HEAD -->

<body class="page-container-bg-solid">
    <div class="page-wrapper">
        <div class="page-wrapper-row">
            <div class="page-wrapper-top">
                <!-- BEGIN HEADER -->
                <div class="page-header">
                    <!-- BEGIN HEADER TOP -->
                    <div class="page-header-top">
                        <div class="container">
                            <!-- BEGIN LOGO -->
                            <div class="page-logo">
                                <a href="index.html">
                                    <img src="~/HospitalWebsite/assets/layouts/layout3/img/Logo-Inline.png" alt="logo" class="logo-default">
                                </a>
                            </div>
                            <!-- END LOGO -->
                            <!-- BEGIN RESPONSIVE MENU TOGGLER -->
                            <a href="javascript:;" class="menu-toggler"></a>
                            <!-- END RESPONSIVE MENU TOGGLER -->
                            <!-- BEGIN TOP NAVIGATION MENU -->
                            <div class="top-menu">
                                <ul class="nav navbar-nav pull-right">
                                  
                                        
                                    <li class="dropdown dropdown-extended quick-sidebar-toggler">
                                        <a asp-action="login" asp-controller="user">
                                            <i class="icon-logout"></i>
                                        </a>
                                    </li>
                                      
</ul>
                            </div>
                            <!-- END TOP NAVIGATION MENU -->
                        </div>
                    </div>
                    <!-- END HEADER TOP -->
                    <!-- BEGIN HEADER MENU -->
                    <div class="page-header-menu">
                        <div class="container">
                            <!-- BEGIN HEADER SEARCH BOX -->
                            <form class="search-form" action="" method="GET">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="بحث" name="query">
                                    <span class="input-group-btn">
                                        <a href="javascript:;" class="btn submit">
                                            <i class="icon-magnifier"></i>
                                        </a>
                                    </span>
                                </div>
                            </form>
                            <!-- END HEADER SEARCH BOX -->
                            <!-- BEGIN  MENU -->
                            <div class="hor-menu  ">
                                <ul class="nav navbar-nav">
                                    <li class="active">
                                        <a asp-action="index" asp-controller="home"> الرئيسية</a>
                                    </li>
                                    <li>
                                        <a asp-action="index" asp-controller="Patient"> إضافة مريض</a>
                                    </li>
                                    <li>
                                        <a asp-action="patientStatus" asp-controller="Patient"> حالات المرضى</a>
                                    </li>
                                    @if (Service.doctor == true)
                                    {
                                    <li>
                                        <a asp-action="index" asp-controller="User"> المستخدمين</a>
                                    </li>
                                    }
                                </ul>
                            </div>
                            <!-- END MENU -->
                        </div>
                    </div>
                    <!-- END HEADER MENU -->
                </div>
                <!-- END HEADER -->
            </div>
        </div>
        <div class="page-wrapper-row full-height">
            <div class="page-wrapper-middle">
                <!-- BEGIN CONTAINER -->
                <div class="container">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
                <!-- END CONTAINER -->
            </div>
        </div>
        <div class="page-wrapper-row">
            <div class="page-wrapper-bottom">
                <!-- BEGIN FOOTER -->
                <!-- BEGIN INNER FOOTER -->
                <div class="page-footer">
                    <div class="container">
                        جميع الحقوق محفوظة 2021 &copy; تم التصميم بواسطة:
                        <a target="_blank" href="https://mam-eg.com"><img src="~/HospitalWebsite/assets/layouts/layout3/img/mam-logo.png"></a>
                    </div>
                </div>
                <div class="scroll-to-top">
                    <i class="icon-arrow-up"></i>
                </div>
                <!-- END INNER FOOTER -->
                <!-- END FOOTER -->
            </div>
        </div>
    </div>
    <!--[if lt IE 9]>
    <script src="~/HospitalWebsite/assets/global/plugins/respond.min.js"></script>
    <script src="~/HospitalWebsite/assets/global/plugins/excanvas.min.js"></script>
    <script src="~/HospitalWebsite/assets/global/plugins/ie8.fix.min.js"></script>
    <![endif]-->
    <!-- BEGIN CORE PLUGINS -->
    <script src="~/HospitalWebsite/assets/global/plugins/jquery.min.js" type="text/javascript"></script>
    <script src="~/HospitalWebsite/assets/global/plugins/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/HospitalWebsite/assets/global/plugins/js.cookie.min.js" type="text/javascript"></script>
    <script src="~/HospitalWebsite/assets/global/plugins/jquery-slimscroll/jquery.slimscroll.min.js" type="text/javascript"></script>
    <script src="~/HospitalWebsite/assets/global/plugins/jquery.blockui.min.js" type="text/javascript"></script>
    <script src="~/HospitalWebsite/assets/global/plugins/bootstrap-switch/js/bootstrap-switch.min.js" type="text/javascript"></script>
    <!-- END CORE PLUGINS -->
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <script src="~/HospitalWebsite/assets/global/plugins/jquery-repeater/jquery.repeater.js" type="text/javascript"></script>
    <script src="~/HospitalWebsite/assets/global/plugins/moment.min.js" type="text/javascript"></script>
    <script src="~/HospitalWebsite/assets/global/plugins/bootstrap-daterangepicker/daterangepicker.min.js" type="text/javascript"></script>
    <script src="~/HospitalWebsite/assets/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js" type="text/javascript"></script>
    <script src="~/HospitalWebsite/assets/global/plugins/bootstrap-timepicker/js/bootstrap-timepicker.min.js" type="text/javascript"></script>
    <script src="~/HospitalWebsite/assets/global/plugins/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js" type="text/javascript"></script>
    <script src="~/HospitalWebsite/assets/global/plugins/clockface/js/clockface.js" type="text/javascript"></script>
    <!-- END PAGE LEVEL PLUGINS -->
    <!-- BEGIN THEME GLOBAL SCRIPTS -->
    <script src="~/HospitalWebsite/assets/global/scripts/app.min.js" type="text/javascript"></script>
    <!-- END THEME GLOBAL SCRIPTS -->
    <!-- BEGIN PAGE LEVEL SCRIPTS -->
    <script src="~/HospitalWebsite/assets/pages/scripts/form-repeater.min.js" type="text/javascript"></script>
    <script src="~/HospitalWebsite/assets/pages/scripts/components-date-time-pickers.min.js" type="text/javascript"></script>
    <!-- END PAGE LEVEL SCRIPTS -->
    <!-- BEGIN THEME LAYOUT SCRIPTS -->
    <script src="~/HospitalWebsite/assets/layouts/layout3/scripts/layout.min.js" type="text/javascript"></script>
    <script src="~/HospitalWebsite/assets/layouts/layout3/scripts/demo.min.js" type="text/javascript"></script>
    <script src="~/HospitalWebsite/assets/layouts/global/scripts/quick-sidebar.min.js" type="text/javascript"></script>
    <script src="~/HospitalWebsite/assets/layouts/global/scripts/quick-nav.min.js" type="text/javascript"></script>
    <!-- END THEME LAYOUT SCRIPTS -->
    <script>
        $(document).ready(function () {
            $('#clickmewow').click(function () {
                $('#radio1003').attr('checked', 'checked');
            });
        })
    </script>

<!--<script src="~/lib/jquery/dist/jquery.min.js"></script>-->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
