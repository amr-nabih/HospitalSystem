                                            <div class="portlet light form-fit " style="margin: 0;">

                                                <div class="portlet-body form status-table">
                                                    <div class="table-responsive">
                                                        <table class="table table-striped table-bordered table-hover show-table">
                                                            <thead>
                                                                <tr class="bg-blue-steel font-white">
                                                                    <th style="width: 10%;">الكود  </th>
                                                                    <th style="width: 15%;"> السن </th>
                                                                    <th style="width: 15%;"> الحالة </th>
                                                                    <th style="width: 15%;">الوقت </th>
                                                                    <th style="width: 15%;">الملاحظات </th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @foreach (var item in Model)
                                                                {
                                                                    DateTime dt = item.PatientDate;
                                                                    <tr>
                                                                        <td><h1> @item.PatientCode </h1></td>
                                                                        <td><h1>@item.age</h1></td>
                                                                        <td>
                                                                            <h1>
                                                                                @if (item.PatientStatusId == 6)
                                                                                {
                                                                                    @foreach (var listItem in (List<SelectListItem>)ViewBag.FillPatientStatus)
                                                                                    {
                                                                                        var PStatus = item.PatientStatusId;
                                                                                        if (listItem.Value == PStatus.ToString())
                                                                                        {
                                                                                            <h1 class="status-label preparation"> @listItem.Text </h1>
                                                                                        }
                                                                                    }
                                                                                }
                                                                                @if (item.PatientStatusId == 8)
                                                                                {
                                                                                    @foreach (var listItem in (List<SelectListItem>)ViewBag.FillPatientStatus)
                                                                                    {
                                                                                        var PStatus = item.PatientStatusId;
                                                                                        if (listItem.Value == PStatus.ToString())
                                                                                        {
                                                                                            <h1 class="status-label operations"> @listItem.Text </h1>
                                                                                        }
                                                                                    }
                                                                                }
                                                                                @if (item.PatientStatusId == 7)
                                                                                {
                                                                                    @foreach (var listItem in (List<SelectListItem>)ViewBag.FillPatientStatus)
                                                                                    {
                                                                                        var PStatus = item.PatientStatusId;
                                                                                        if (listItem.Value == PStatus.ToString())
                                                                                        {
                                                                                            <h1 class="status-label wake-up"> @listItem.Text </h1>
                                                                                        }
                                                                                    }
                                                                                }
                                                                                @if (item.PatientStatusId == 9)
                                                                                {
                                                                                    @foreach (var listItem in (List<SelectListItem>)ViewBag.FillPatientStatus)
                                                                                    {
                                                                                        var PStatus = item.PatientStatusId;
                                                                                        if (listItem.Value == PStatus.ToString())
                                                                                        {
                                                                                            <h1 class="status-label leave"> @listItem.Text </h1>
                                                                                        }
                                                                                    }
                                                                                }
                                                                            </h1>
                                                                        </td>

                                                                        <td>
                                                                            <h1>
                                                                                @dt.ToString("HH:mm")
                                                                            </h1>
                                                                            @*<div class="input-icon">
                                                                                    <i class="fa fa-clock-o"></i>
                                                                                    <input type="text" value="@dt.ToString("dd-MM-YYYY HH:mm");" class="form-control timepicker timepicker-default">
                                                                                </div>*@
                                                                        </td>
                                                                        <td><h1>@item.Note</h1></td>

                                                                    </tr>
                                                                }

                                                            </tbody>
                                                        </table>
